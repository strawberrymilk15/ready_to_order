<div class="registration_wrap">
  <%= image_tag "", class:"regi_logo" %>
  <h1 class="regi_h1">Sign Up</h1>

  <div class="regi_inner">
    <p class="regi_p">会員情報をご入力ください</p>
    <%= form_with model: @shop, shop_session_path do |f| %>
      <%= render "shops/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>

    <%= render "shops/shared/links" %>
  </div>
</div>
